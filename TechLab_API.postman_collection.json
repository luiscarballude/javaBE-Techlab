{
  "info": {
    "name": "TechLab Products API",
    "description": "Colección de endpoints para la API de productos y pedidos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar todos los productos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos"]
            }
          }
        },
        {
          "name": "Obtener producto por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "1"]
            }
          }
        },
        {
          "name": "Buscar productos por nombre",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/buscar?nombre=laptop",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "buscar"],
              "query": [
                {
                  "key": "nombre",
                  "value": "laptop"
                }
              ]
            }
          }
        },
        {
          "name": "Buscar productos con stock bajo",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/stock-bajo?minimo=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "stock-bajo"],
              "query": [
                {
                  "key": "minimo",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Crear producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Mouse Inalámbrico\",\n  \"precio\": 25.99,\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/productos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos"]
            }
          }
        },
        {
          "name": "Actualizar producto",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Mouse Inalámbrico Pro\",\n  \"precio\": 29.99,\n  \"stock\": 45\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "1"]
            }
          }
        },
        {
          "name": "Eliminar producto",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "productos", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Pedidos",
      "item": [
        {
          "name": "Listar todos los pedidos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/pedidos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pedidos"]
            }
          }
        },
        {
          "name": "Obtener pedido por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/pedidos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pedidos", "1"]
            }
          }
        },
        {
          "name": "Crear pedido",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lineas\": [\n    {\n      \"productoId\": 1,\n      \"cantidad\": 2\n    },\n    {\n      \"productoId\": 3,\n      \"cantidad\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pedidos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pedidos"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8083",
      "type": "string"
    }
  ]
}
